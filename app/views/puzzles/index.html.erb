<p id="notice"><%= notice %></p>

<h1 class="text-4xl mb-8">Puzzles</h1>

<table>
  <tbody>
    <% @puzzles.each do |puzzle| %>
      <tr>
        <td class="pr-4"><%= link_to puzzle.title, puzzle  %></td>
        <td><%= link_to 'Edit', edit_puzzle_path(puzzle), class: 'btn bg-purple-600' %></td>
        <td><%= link_to 'Delete', puzzle, class: 'btn bg-red-600', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="mt-16">
<%= link_to 'New Puzzle', new_puzzle_path, class: 'btn' %>
</div>
