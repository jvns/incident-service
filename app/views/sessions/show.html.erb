<script>
const application = Stimulus.Application.start();

class HelloController extends Stimulus.Controller {
  static get_targets() {
    return ["links", "pending", "iframe", "requestButton", "permissionGotten"];
  }
  
  permission_gotten() {
    this.requestButtonTarget.classList.add('hidden');
    this.permissionGottenTarget.classList.remove('hidden');
  }

  request_permission() {
    Notification.requestPermission().then(permission => { 
      console.log('got permission')
      this.permission_gotten();
    });
  }

  connect(){
    console.log('hi')
    const evtSource = new EventSource("/sessions/<%=@session.id%>/stream", { withCredentials: true })
    evtSource.addEventListener("status", function(event) {
      console.log("status", event.data, event.id);
    });
    evtSource.addEventListener("finished", function(event) {
      console.log("finished", event.data);
      this.pendingTarget.classList.add("hidden");
      // reload the iframe
      this.iframeTarget.src = this.iframeTarget.src;
      this.linksTarget.classList.remove("hidden");
      evtSource.close();
    });
    if (Notification.permission == 'granted') {
      this.permission_gotten();
    }
  }
};

application.register("hello", HelloController);
</script>
